@model BETL20250324AppWebMVC.Models.Product
@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Producto</h4>
<hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Nombre del producto</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Almacen</label>
                <select asp-for="WarehouseId" class="form-control" asp-items="ViewBag.WarehouseId"></select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Precio producto</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Precio de compra</label>
                <input asp-for="PurchasePrice" class="form-control" />
                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
            </div>
        </div>
        <div class="col-8">
            <div class="form-group">
                <label class="control-label">Notas</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </div>
        <div class="col-8">
            <div class="form-group">
                <label class="control-label">Descripción</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Marca</label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
        </div>
    </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success mt-2" />
            </div>
        </form>
 

<div>
    <a asp-action="Index" class="btn btn-primary mt-2">Cancelar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}